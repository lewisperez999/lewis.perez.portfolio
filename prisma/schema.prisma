generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Skill {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  category    String
  icon        String
  level       Int      @default(5)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("skills")
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  image       String
  liveUrl     String?
  githubUrl   String?
  technologies String[]
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("projects")
}

model Experience {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  role         String
  company      String
  period       String
  achievements String[]
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("experience")
}

model PersonalInfo {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  title       String
  bio         String
  email       String
  phone       String?
  location    String?
  linkedinUrl String?
  githubUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("personal_info")
}
